<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cart_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/orderProimg"
                android:layout_width="110dp"
                android:layout_height="140dp"
                android:src="@drawable/shoe1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/orderProname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/orderProimg"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Product Name"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/orderProsize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Size"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginLeft="15dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/qtyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/orderProimg"
                app:layout_constraintTop_toBottomOf="@id/orderProname"
                android:text="Qty: "
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/orderQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/qtyText"
                app:layout_constraintTop_toBottomOf="@id/orderProname"
                android:text="Qty"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/paisaIcon"
                android:layout_width="16dp"
                android:layout_height="22dp"
                android:src="@drawable/rupee"
                app:layout_constraintTop_toBottomOf="@id/orderProname"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="11dp"
                app:layout_constraintRight_toLeftOf="@id/orderTotal"
                android:layout_marginRight="10dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/orderTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/orderProname"
                android:text="44654"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginLeft="15dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/payText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/orderProimg"
                app:layout_constraintTop_toBottomOf="@id/qtyText"
                android:text="Payment: "
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/orderPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/payText"
                app:layout_constraintTop_toBottomOf="@id/orderQty"
                android:text="Visa"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tiertxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/orderProimg"
                app:layout_constraintTop_toBottomOf="@id/payText"
                android:text="Shipping tier: "
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ordertier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/tiertxt"
                app:layout_constraintTop_toBottomOf="@id/orderPay"
                android:text="Roadways"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/deliverytxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/orderProimg"
                android:text="Delivery Date: "
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/orderDelivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/deliverytxt"
                app:layout_constraintTop_toBottomOf="@id/orderProimg"
                android:text="6 March, 23, Tuesday"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/idText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/deliverytxt"
                android:text="Order ID: "
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/orderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/idText"
                app:layout_constraintTop_toBottomOf="@id/orderDelivery"
                android:text="75412369851"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:textStyle="bold"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>